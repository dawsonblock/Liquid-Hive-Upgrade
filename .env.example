# Liquid Hive Environment Configuration Template
# Copy this file to .env and update the values for your environment

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
APP_NAME="Liquid Hive"
APP_VERSION="1.0.0"
DEBUG=false
ENVIRONMENT=production
APP_ENV=production

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8001
API_WORKERS=1
API_RELOAD=false
API_LOG_LEVEL=info
API_CORS_ORIGINS="http://localhost:3000,http://localhost:5173"

# Service-specific ports
FEEDBACK_API_PORT=8091
ORACLE_API_PORT=8092

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MongoDB (Primary Database)
MONGO_URL=mongodb://localhost:27017/liquid_hive
MONGO_INITDB_DATABASE=liquid_hive

# Redis (Cache & Sessions)
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5
REDIS_RETRY_ON_TIMEOUT=true

# Neo4j (Graph Database) - Optional
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_secure_password

# SQLite (Fallback)
DATABASE_URL=sqlite:///./liquid_hive.db
DATABASE_ECHO=false
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# =============================================================================
# VECTOR DATABASE (Qdrant)
# =============================================================================
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your_qdrant_api_key
QDRANT_COLLECTION_NAME=liquid_hive_vectors

# =============================================================================
# AI/ML PROVIDER API KEYS (At least one required)
# =============================================================================
# DeepSeek
DEEPSEEK_API_KEY=sk-your_deepseek_key_here
DEEPSEEK_R1_API_KEY=sk-your_deepseek_r1_key_here

# OpenAI
OPENAI_API_KEY=sk-your_openai_key_here

# Anthropic
ANTHROPIC_API_KEY=sk-ant-your_anthropic_key_here

# Qwen
QWEN_API_KEY=your_qwen_key_here

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
SECRET_KEY=change-me-in-production-use-strong-random-key
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
SECURITY_ALGORITHM=HS256
PASSWORD_MIN_LENGTH=8
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# Admin access
ADMIN_TOKEN=your_secure_admin_token_here

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30
PROMETHEUS_PORT=9090

# OpenTelemetry (Optional)
OTEL_SERVICE_NAME=liquid-hive-upgrade
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Core Features
RAG_ENABLED=true
AGENT_AUTONOMY=true
SWARM_PROTOCOL=true
SAFETY_CHECKS=true
CONFIDENCE_MODELING=true

# Phase 2 Features (implemented later)
FEEDBACK_LOOP_ENABLED=false
ORACLE_SYSTEM_ENABLED=false

# Development Features
DEBUG_MODE=false
MOCK_EXTERNAL_SERVICES=false

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
CACHE_DEFAULT_TTL=3600
CACHE_MAX_SIZE=1000
CACHE_CLEANUP_INTERVAL=300

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
REACT_APP_BACKEND_URL=http://localhost:8001
VITE_API_BASE=http://localhost:8001
VITE_BACKEND_URL=http://localhost:8001

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================
WORKERS=4
MAX_TENANTS=1000
RATE_LIMIT_RPS=50

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================
# GitHub Integration
GITHUB_TOKEN=your_github_token_here

# AWS Services (if using)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# HashiCorp Vault (if using)
VAULT_URL=http://localhost:8200
VAULT_TOKEN=your_vault_token_here

# =============================================================================
# DEVELOPMENT OVERRIDES
# =============================================================================
# Uncomment for development
# DEBUG=true
# ENVIRONMENT=development
# API_RELOAD=true
# LOG_LEVEL=debug
# MOCK_EXTERNAL_SERVICES=true
