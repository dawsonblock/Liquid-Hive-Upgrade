# Liquid-Hive Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ===========================================
# REQUIRED API KEYS
# ===========================================

# DeepSeek API Key - Get from https://platform.deepseek.com/
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Hugging Face Hub Token - Get from https://huggingface.co/settings/tokens
HUGGING_FACE_HUB_TOKEN=your_huggingface_token_here

# ===========================================
# REDIS CONFIGURATION
# ===========================================

# Redis URL for caching and message bus
REDIS_URL=redis://redis:6379

# Redis API Token (if using Redis Cloud or similar)
REDIS_API_TOKEN=your_redis_token_here

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# Neo4j Graph Database
NEO4J_USER=neo4j
NEO4J_PASSWORD=change_this_password

# ===========================================
# LOGGING CONFIGURATION
# ===========================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# JSON logging format (1 for JSON, 0 for text)
LOG_JSON=1

# ===========================================
# OPTIONAL EXTERNAL SERVICES
# ===========================================

# vLLM endpoint for local LLM inference
# Leave empty to use API providers only
VLLM_ENDPOINT=

# ===========================================
# MONITORING & ALERTING (OPTIONAL)
# ===========================================

# Grafana SMTP Configuration
GRAFANA_SMTP_HOST=
GRAFANA_SMTP_USER=
GRAFANA_SMTP_PASSWORD=
GRAFANA_SMTP_FROM=

# Slack Webhook for alerts
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# ===========================================
# ADVANCED CONFIGURATION
# ===========================================

# Secrets provider: environment, vault, aws-secrets-manager
SECRETS_PROVIDER=environment

# External LLM endpoints (optional)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# ===========================================
# SECURITY NOTES
# ===========================================
# 1. Never commit the .env file to version control
# 2. Use strong passwords for databases
# 3. Rotate API keys regularly
# 4. Use secrets management in production
# 5. Consider using Docker secrets or Kubernetes secrets
