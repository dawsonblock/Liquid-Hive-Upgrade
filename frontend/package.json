{
  "name": "cerebral-gui",
  "version": "0.2.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "start": "vite --host 0.0.0.0 --port 3000",
    "build": "tsc -b && vite build",
    "build:analyze": "tsc -b && vite build --mode analyze",
    "build:staging": "tsc -b && vite build --mode staging",
    "build:production": "tsc -b && vite build --mode production",
    "preview": "vite preview --port 5173",
    "preview:staging": "vite preview --port 4173 --mode staging",
    "test": "jest --ci --runInBand --coverage",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --ci --runInBand",
    "test:ui": "jest --watch --verbose",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand --no-cache",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 200",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "lint:staged": "lint-staged",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "format": "prettier --write src/**/*.{ts,tsx,js,jsx,json,css,md}",
    "format:check": "prettier --check src/**/*.{ts,tsx,js,jsx,json,css,md}",
    "clean": "rm -rf dist node_modules/.vite .eslintcache",
    "clean:all": "rm -rf dist node_modules/.vite .eslintcache coverage",
    "analyze": "npm run build:analyze && npx vite-bundle-analyzer dist/stats.html",
    "size": "npm run build && npx vite-bundle-analyzer dist",
    "validate": "npm run type-check && npm run lint && npm run test",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "pre-push": "npm run validate"
  },
  "dependencies": {
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.5",
    "@mui/icons-material": "^5.15.21",
    "@mui/material": "^5.15.21",
    "@reduxjs/toolkit": "^2.2.5",
    "axios": "^1.7.2",
    "prismjs": "^1.30.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-markdown": "^10.1.0",
    "react-redux": "^9.1.2",
    "react-syntax-highlighter": "^15.6.6",
    "globals": "^14.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^15.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "@vitejs/plugin-react": "^4.3.1",
    "babel-jest": "^29.7.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "husky": "^9.0.11",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.7",
    "prettier": "^3.4.2",
    "rollup-plugin-visualizer": "^5.12.0",
    "ts-jest": "^29.1.5",
    "tslib": "^2.8.1",
    "typescript": "^5.5.2",
    "vite": "^7.1.4",
    "vite-bundle-analyzer": "^0.11.0",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-pwa": "^0.20.5"
  },
  "resolutions": {
    "prismjs": ">=1.30.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,css,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run validate"
    }
  }
}
