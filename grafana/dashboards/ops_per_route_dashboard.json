{
  "title": "Capsule Brain \u2014 Per-Route Performance",
  "timezone": "browser",
  "panels": [
    {
      "type": "timeseries",
      "title": "Top Routes by Request Rate",
      "targets": [
        {
          "expr": "topk(10, sum(rate(cb_http_requests_total[1m])) by (path))",
          "legendFormat": "{{path}}"
        }
      ],
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 12,
        "h": 8
      }
    },
    {
      "type": "timeseries",
      "title": "Errors by Route (5xx)",
      "targets": [
        {
          "expr": "sum(rate(cb_http_requests_total{status=~\"5..\"}[5m])) by (path)",
          "legendFormat": "{{path}}"
        }
      ],
      "gridPos": {
        "x": 12,
        "y": 0,
        "w": 12,
        "h": 8
      }
    },
    {
      "type": "timeseries",
      "title": "Latency p95 by Route (s)",
      "targets": [
        {
          "expr": "topk(10, histogram_quantile(0.95, sum(rate(cb_request_latency_seconds_bucket[5m])) by (le, path)))",
          "legendFormat": "{{path}}"
        }
      ],
      "gridPos": {
        "x": 0,
        "y": 8,
        "w": 12,
        "h": 8
      }
    },
    {
      "type": "timeseries",
      "title": "Latency p99 by Route (s)",
      "targets": [
        {
          "expr": "topk(10, histogram_quantile(0.99, sum(rate(cb_request_latency_seconds_bucket[5m])) by (le, path)))",
          "legendFormat": "{{path}}"
        }
      ],
      "gridPos": {
        "x": 12,
        "y": 8,
        "w": 12,
        "h": 8
      }
    },
    {
      "type": "timeseries",
      "title": "Tokens per Minute (by Model)",
      "targets": [
        {
          "expr": "sum(rate(cb_tokens_total[1m])) by (model)",
          "legendFormat": "{{model}}"
        }
      ],
      "gridPos": {
        "x": 0,
        "y": 16,
        "w": 24,
        "h": 8
      }
    }
  ],
  "schemaVersion": 37,
  "version": 1
}